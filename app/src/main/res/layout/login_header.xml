<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_login">

    <com.application.fmt.customViews.customFontViews.CustomTextviewBold
        android:id="@+id/headingTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/ten_dp"
        android:padding="@dimen/five_dp"
        android:text="@string/i_love_her_i_submit_to_him"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/headingLoveLineIV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fourty_dp"
        android:contentDescription="TODO"
        android:padding="@dimen/five_dp"
        android:src="@drawable/ic_love_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headingTV" />


    <ImageView
        android:id="@+id/logoIV"
        android:layout_width="@dimen/two_hundred_fifty_dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headingLoveLineIV" />
</merge>